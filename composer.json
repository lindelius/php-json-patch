{
    "name": "lindelius/php-json-patch",
    "description": "A zero-dependency PHP implementation of JSON Patch",
    "require": {
        "php": "^7.4||^8.0",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "php-coveralls/php-coveralls": "^2.0"
    },
    "autoload": {
        "files": [
            "php81-polyfill.php"
        ],
        "psr-4": {
            "Lindelius\\JsonPatch\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lindelius\\JsonPatch\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}
